{
  "Version": "2012-10-17",
  "Statement": [
      {
        "Effect": "Deny",
        "Action": [
          "bedrock:InvokeModel",
          "bedrock:InvokeModelWithResponseStream"
        ],
        "NotResource": [
          "arn:aws:bedrock:*::foundation-model/anthropic.*",
          "arn:aws:bedrock:*:*:inference-profile/*anthropic.claude-*"
        ],
        "Condition": {
          "StringNotEquals": {
            "aws:PrincipalAccount": [
              "000000000000" # Exempt accounts
            ]
          }
        }
      }
  ]
}
